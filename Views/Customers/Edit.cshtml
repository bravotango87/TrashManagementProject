@model TrashManagement.Models.Customer

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Modify Trash Pickup</h1>

<h4>Chnage pickup day, and/or start/suspend your service</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div hidden class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="StreetAddress" class="control-label"></label>
                <input asp-for="StreetAddress" class="form-control" />
                <span asp-validation-for="StreetAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZipCode" class="control-label"></label>
                <input asp-for="ZipCode" class="form-control" />
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="Balance" class="control-label"></label>
                <input asp-for="Balance" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrashDay" class="control-label"></label>
                <input asp-for="TrashDay" class="form-control" />
                <span asp-validation-for="TrashDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExtraPickup" class="control-label"></label>
                <input asp-for="ExtraPickup" class="form-control" />
                <span asp-validation-for="ExtraPickup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartSuspend" class="control-label"></label>
                <input asp-for="StartSuspend" class="form-control" />
                <span asp-validation-for="StartSuspend" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndSuspend" class="control-label"></label>
                <input asp-for="EndSuspend" class="form-control" />
                <span asp-validation-for="EndSuspend" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
